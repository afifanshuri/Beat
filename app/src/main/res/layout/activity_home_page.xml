<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.beat.HomePage"
    android:orientation="vertical"
    android:background="@drawable/beatbackground">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center">

        <TextView
            android:id="@+id/welcometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Welcome, John"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/recentheartrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcometext"
            android:background="@android:color/transparent"
            android:text="User's last taken max heart rate: None"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lastStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentheartrate"
            android:background="@android:color/transparent"
            android:text="User's current status: None"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/monitorlogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/monitor_logo"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/pairlogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/pair_logo"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>